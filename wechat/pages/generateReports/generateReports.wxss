.container {
    padding: 20rpx;
    background-color: #f5f5f5;
    height: 100vh;
  }
  
  .header {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 20rpx;
  }
  
  .date-picker {
    margin-bottom: 20rpx;
  }
  
  .label {
    font-size: 30rpx;
    color: #333;
    margin-right: 10rpx;
  }
  
  .picker {
    font-size: 28rpx;
    color: #007aff;
    border: 1px solid #ddd;
    padding: 10rpx;
    border-radius: 5rpx;
    margin-bottom: 20rpx;
  }
  
  .generate-button {
    background-color: #007aff;
    color: #fff;
    text-align: center;
    padding: 20rpx;
    border-radius: 10rpx;
    font-size: 30rpx;
  }
  
.container {
    padding: 20rpx;
    background-color: #f5f5f5;
    height: 100vh;
  }
  
  .header {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 20rpx;
  }
  
  .add-record {
    background-color: #007aff;
    color: #fff;
    text-align: center;
    padding: 20rpx;
    border-radius: 10rpx;
    font-size: 30rpx;
    margin-bottom: 20rpx;
  }
  
  .record-list {
    flex: 1;
  }
  
  .record-item {
    background-color: #fff;
    padding: 20rpx;
    margin-bottom: 10rpx;
    border-radius: 10rpx;
    box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
  }
  
  .record-info {
    margin-bottom: 10rpx;
  }
  
  .record-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
  }
  
  .record-details,
  .record-date,
  .record-cost {
    font-size: 28rpx;
    color: #666;
  }
  
/* 页面容器 */
.container {
    display: flex;
    flex-direction: column;
    background-color: #f5f5f5;
    height: 100vh;
  }
  
  /* 标题栏样式 */
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20rpx;
    background-color: #007aff;
    color: #fff;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 32rpx;
    box-shadow: 0rpx 2rpx 5rpx rgba(0, 0, 0, 0.1);
  }
  
  .back-button {
    width: 50rpx;
    height: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .back-icon {
    width: 30rpx;
    height: 30rpx;
  }
  
  .title {
    flex: 1;
    text-align: center;
    font-weight: bold;
  }
  
  .save-button {
    font-size: 28rpx;
    color: #fff;
  }
  
  /* 内容列表样式 */
  .content {
    margin-top: 10rpx;
    background-color: #fff;
  }
  
  .list-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 30rpx;
    border-bottom: 1px solid #ddd;
  }
  
  .label {
    font-size: 30rpx;
    color: #333;
  }
  
  /* 修改的样式 */
  .value {
    font-size: 30rpx; /* 字体大小 */
    color: #bbb; /* 灰色字体 */
    margin-right: 10rpx; /* 与箭头的间距 */
    text-align: right; /* 靠右对齐 */
    flex: 1; /* 占据剩余空间 */
  }
  
  .arrow-icon {
    width: 20rpx;
    height: 20rpx;
  }
  
  .switch {
    margin-left: 10rpx;
  }
  
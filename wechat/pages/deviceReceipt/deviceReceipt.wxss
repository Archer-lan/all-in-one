.container {
    padding: 20rpx;
    background-color: #f5f5f5;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .header {
    width: 100%;
    background-color: #007aff;
    color: #fff;
    font-size: 36rpx;
    text-align: center;
    padding: 20rpx;
  }
  
  .title {
    font-weight: bold;
  }
  
  .form {
    width: 90%;
    margin-top: 30rpx;
  }
  
  .form-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
  }
  
  .label {
    font-size: 30rpx;
    color: #333;
  }
  
  .input-box,
  .input {
    flex: 1;
    text-align: right;
    color: #999;
    border-bottom: 1px solid #ddd;
    padding: 10rpx 0;
  }
  
  .input {
    background-color: transparent;
    border: none;
    font-size: 28rpx;
  }
  
  .submit-btn {
    background-color: #007aff;
    color: #fff;
    font-size: 32rpx;
    width: 90%;
    padding: 15rpx 0;
    text-align: center;
    margin-top: 40rpx;
    border-radius: 10rpx;
  }
  
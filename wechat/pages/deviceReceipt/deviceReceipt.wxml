<view class="container">
  <view class="header">
    <text class="title">设备出库</text>
  </view>
  <view class="form">
    <!-- 使用部门 -->
    <view class="form-item">
      <text class="label">使用部门</text>
      <input class="input" placeholder="请输入使用部门" bindinput="onInput" data-field="department" />
    </view>
    <!-- 使用人 -->
    <view class="form-item">
      <text class="label">使用人</text>
      <input class="input" placeholder="请输入使用人" bindinput="onInput" data-field="user" />
    </view>
    <!-- 设备名称 -->
    <view class="form-item">
      <text class="label">设备名称</text>
      <input class="input" placeholder="请输入设备名称" bindinput="onInput" data-field="deviceName" />
    </view>
    <!-- 数量 -->
    <view class="form-item">
      <text class="label">数量</text>
      <input class="input" type="number" placeholder="请输入数量" bindinput="onInput" data-field="quantity" />
    </view>
    <!-- 出库时间 -->
    <view class="form-item">
      <text class="label">出库时间</text>
      <view class="input-box">{{currentDate}}</view>
    </view>
  </view>
  <!-- 操作 -->
  <button class="submit-btn" bindtap="submitForm">提交出库</button>
</view>
